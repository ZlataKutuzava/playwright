{
  "name": "playwright",
  "version": "1.0.0",
  "main": "index.js",
  "lint-staged": {
    "packages/**/src/**/*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ],
    "packages/**/src/**/*.{ts,tsx,js,jsx,json,md,yml,yaml,css,scss}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --config .prettierrc src/**/*.ts --check src/",
    "prettier:fix": "prettier --config .prettierrc src/**/*.ts --write src/",
    "format": "npm run lint && npm run prettier",
    "prepare": "husky",
    "test:ui": "npx playwright test",
    "ui-mode": "npx playwright test --ui"
  },
  "author": "Zlata Kutuzava",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@playwright/test": "^1.56.0",
    "@types/node": "^24.7.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0"
  },
  "dependencies": {
    "lint-staged": "^16.2.3"
  }
}
